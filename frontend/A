<body>
    <p id="update-contents">Cats have about 130,000 hairs per<br/>square inch )20, 155 hairs per square <br/> centimeter</p>
    <button id="update-btn" type="button">更新</button>

    <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"></script>
    <script>
        const url = "https://catfact.ninja/fact";
        $("#update-btn").on('click', function() {
            $.ajax({
                url: url,
                type: 'GET',
                dataType: 'json',
            })
            .done(function(response) {
                $("#update-contents").text(response.fact);
            })
            .fail(function() {
                $("#update-contents").text("エラーが発生しました");
            })
        })
    </script>
</body>
</html>